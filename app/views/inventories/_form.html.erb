<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 pt-4 bg-brand-facebook rounded">
      <%= form_for(@inventory) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control rounded", placeholder: "Name of inventory" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :location, class: "col-2 col-form-label text-white" %>
          <div class="col-10"> 
            <%= f.text_area :location, rows: 3, class: "form-control", placeholder: "Location of inventory" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label "Additional Info", class: "col-2 col-form-label text-white" %>
          <div class="col-10"> 
            <%= f.text_area :info, rows: 10, class: "form-control rounded", placeholder: "Add any additional helpful info" %>
          </div>
        </div>


        <div class="form-group">
          <div class="row">
            <div class="col-sm-offset-2 col-sm-8">
              <%= f.collection_check_boxes :service_ids, Service.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text + "    " } %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-white btn-lg mt-3" %>
        </div>
      <% end %>
    </div>

    <div class="col-12 justify-content-center">
    <div class="mb-3 text-center">
        <br>
      <%= link_to '[ Cancel and return to inventorys listing ]', inventories_path, class: "text-info text-center" %>
    </div>
    </div>
  </div>
</div>