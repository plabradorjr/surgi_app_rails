<div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-black rounded">

        <div class="card-body">
          <div class="h4 card-text text-center text-white"><%= @inventory.name %></div>
          <hr>
          <div class="text-white p">Location:</div>
          <div class="card-text text-center text-white p "><%= @inventory.location %></div>
        </div>
          <hr>
        <%if @inventory.info? %>
          <div class="card-body">
            <div class="text-white p">More info:</div>
            <div class="card-text text-center text-white"><%= @inventory.info %></div>
            <br>
          </div>
          <hr>
        <% end %>


        <%if @inventory.picture?  %>
          <div class="card-body">
            <div class="card-text text-center text-white"><%= image_tag(@inventory.picture.url, style: "max-width: 600px; max-height: 600px;", class: "container") %></div>
            <br>
          </div>
        <% end %>


        <div>
        <% if @inventory.services.any? %>
            <h5 class="text-white">Services:</h5>
            <%@inventory.services.each do |i|%>
            <span class="badge badge-white"><%=link_to i.name.upcase, service_path(i) %></span>
            <% end %>
            </br>
            </br>
        <% end %>
        <div>
  

        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@inventory.created_at) %> ago, by: <%= @inventory.user.username.capitalize %>, </br>
          edited <%= time_ago_in_words(@inventory.updated_at) %> ago</small>
          </br>
          </br>
          <%= link_to "Edit", edit_inventory_path(@inventory), class: "btn-sm btn-white" %>
          <%= link_to "Delete", inventory_path(@inventory), class: "btn-sm btn-white", method: :delete, data: {confirm: "Are you sure?"} if current_user == @inventory.user%>
        </div>
      </div>
    </div>
  </div>
</div>
</div>