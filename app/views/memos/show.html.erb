<div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 mt-4">
      <div class="card text-center shadow mb bg-dark rounded">

        <div class="card-body pb-0">
          <div class="h5 card-text text-center text-white"><%= @memo.title %></div>
        </div>
        
          <div class="card-body">
            <textarea disabled rows="18" class="small text-dark card-body col bg-white rounded"><%= @memo.description %></textarea>
            <br>
          </div>

        <div>
        <% if @memo.services.any? %>
            <p class="text-white">Services:</p>
            <%@memo.services.each do |i|%>
            <span class="badge badge-white"><%=link_to i.name.upcase, service_path(i) %></span>
            <% end %>
            </br>
            </br>
        <% end %>
        <div>
  

        <div class="card-footer text-muted">
          <small>Created by <%= @memo.user.username %>, on <%= (@memo.created_at).to_time.strftime('%B %e at %l:%M %p') %> </br>
          edited <%= time_ago_in_words(@memo.updated_at) %> ago</small>
          </br>
          </br>
          <%= link_to "Edit", edit_memo_path(@memo), class: "btn-sm btn-white" %>
          <%= link_to "Delete", memo_path(@memo), class: "btn-sm btn-white", method: :delete, data: {confirm: "Are you sure?"} if current_user == @memo.user%>
        </div>
      </div>
    </div>
  </div>
</div>
</div>