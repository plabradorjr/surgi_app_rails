<div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12-lg mt-4">
      <div class="card col-12 text-center shadow mb bg-dark rounded">

        <div class="card-body col-12 p-3">
          <div class="h5 card-text text-center text-white"><%= @memo.title %></div>
        </div>

          <div class="justify-content-center">
          <%= image_tag(@memo.picture.url, class: "card-img", style: "max-width: 800px; max-height: 800px;") if @memo.picture?%>
          </div>

          <% if @memo.description? %>
          <div class="card-body bg-white col-12 rounded p-0 m-0">
            <textarea disabled style="color:black;" rows="18" class="small card-body col-12 bg-white rounded"><%= @memo.description %></textarea>
            <br>
          </div>
          <% end %>

        <div>
        <% if @memo.services.any? %>
            <br>
            <p class="text-white">Services:</p>
            <%@memo.services.each do |i|%>
            <span class="badge badge-white"><%=link_to i.name.upcase, service_path(i) %></span>
            <% end %>
            </br>
            </br>
        <% end %>
        <div>
  

        <div class="card-footer text-muted">
          <small>Created by <%= @memo.user.username %>, on <%= (@memo.created_at).to_time.strftime('%B %e %Y at %l:%M %p') %> </br>
          edited <%= time_ago_in_words(@memo.updated_at) %> ago</small>
          </br>
          </br>
          <%= link_to "Edit", edit_memo_path(@memo), class: "btn-sm btn-white" %>
          <%= link_to "Delete", memo_path(@memo), class: "btn-sm btn-white", method: :delete, data: {confirm: "Are you sure?"} if current_user == @memo.user%>
        </div>
      </div>
    </div>
  </div>
</div>
</div>